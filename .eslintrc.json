{
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:flowtype/recommended",
      "plugin:security/recommended",
      "plugin:react/recommended"
    ],
    "globals": {
        "describe": true,
        "afterAll": true,
        "afterEach": true,
        "beforeAll": true,
        "beforeEach": true,
        "expect": true,
        "jest": true,
        "test": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "flowtype",
        "security"
    ],
    "rules": {
        "indent": [
            "error",
            2,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "react/jsx-uses-vars": "error"
    }
}
